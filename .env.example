# ============================================
# SPAC Website Environment Variables
# ============================================

# AWS Credentials
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# AWS S3 (configure after creating bucket)
AWS_S3_BUCKET=
CLOUDFRONT_DOMAIN=

# AWS Cognito (configure after creating user pool)
AUTH_COGNITO_ID=
AUTH_COGNITO_SECRET=
AUTH_COGNITO_ISSUER=

# Database (PostgreSQL/Supabase)
# Get your password from: Supabase Dashboard > Project Settings > Database > Connection string
DATABASE_URL=postgresql://user:password@host:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://user:password@host:5432/postgres

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secure-secret

# ============================================
# PayPal Configuration
# ============================================
# Get these from: https://developer.paypal.com/dashboard/applications
# Use sandbox credentials for development, live credentials for production

# PayPal API Credentials
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Public client ID for frontend SDK
NEXT_PUBLIC_PAYPAL_CLIENT_ID=

# PayPal Webhook ID (for signature verification)
# Create a webhook at: https://developer.paypal.com/dashboard/webhooks
PAYPAL_WEBHOOK_ID=

# ============================================
# PayPal Subscription Plan IDs
# ============================================
# Create these plans in PayPal Dashboard:
# https://developer.paypal.com/dashboard/subscriptions/plans
# Or use the PayPal Subscriptions API

# Membership Plans
PAYPAL_PLAN_INDIVIDUAL_MONTHLY=
PAYPAL_PLAN_INDIVIDUAL_ANNUAL=
PAYPAL_PLAN_FAMILY_MONTHLY=
PAYPAL_PLAN_FAMILY_ANNUAL=
PAYPAL_PLAN_STUDENT_ANNUAL=

# Recurring Donation Plan (optional)
PAYPAL_PLAN_DONATION_MONTHLY=

# Apple Wallet (optional - requires $99/yr developer account)
APPLE_TEAM_ID=
APPLE_PASS_TYPE_ID=

# Google Wallet (optional - free)
GOOGLE_WALLET_ISSUER_ID=

# Sentry (optional - for error monitoring)
SENTRY_DSN=
